<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoixSeanceEntrainementActivity">

    <TextView
        android:id="@+id/Choix_Compte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choix Seance"
        android:gravity="center"
        android:textSize="20dp"/>
    <ListView
        android:id="@+id/listSeancesEntrainement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/Choix_Compte"
        android:layout_above="@+id/button_ajout"/>
    <Button
        android:id="@+id/button_ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Créer une séance"/>

</RelativeLayout>