<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF303030"
    tools:context=".SeanceEntrainementActivity">



    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center">
        />
        <TextView
            android:id="@+id/DeleteSeance"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Répétition"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/ChangeSave"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:text="Restant"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/Lancer"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:text="Série"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textChrono"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="test chrono"/>
    <ProgressBar
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progressDrawable="@drawable/drawable_round_chrono_rest"/>


</RelativeLayout>