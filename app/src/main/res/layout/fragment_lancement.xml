<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear231"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:gravity="center">
        />
        <TextView

            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Répétitions"
            />
        <TextView

            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Restant"
            />
        <TextView

            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Séries"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/linear231"
        android:gravity="center">
        />
        <TextView
            android:id="@+id/NombreRepet"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/NombreRestant"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/NombreSerie"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="25dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/nameSeance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:text=""
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        />

    <ProgressBar
        android:id="@+id/progress_bar_seance"
        android:layout_width="300dp"
        android:layout_height="300dp"
        style="?android:progressBarStyleHorizontal"
        android:progress="50"
        android:max="100"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:rotation="-90"
        android:progressDrawable="@drawable/drawable_round_chrono_prepa"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/Demarrer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Lancer"
            android:background="@drawable/border"/>
    </LinearLayout>
</RelativeLayout>